project_name: test-goreleaser-workflow

before:
  hooks:
    - go mod download

builds:
  - binary: test-goreleaser-workflow
    main: ./
    flags:
      - -trimpath
    env:
      - CGO_ENABLED=0
    goos:
      - darwin
      - linux
      - freebsd
      - windows

archives:
  - formats:
    - tar.gz
    # Must specify name_template to enable wrap_in_directory feature
    name_template: "{{ .ProjectName }}_{{ .Version }}_{{ .Os }}_{{ .Arch }}"
    wrap_in_directory: true
    format_overrides:
      - goos: windows
        formats:
          - zip
    files:
      - LICENSE
      - README.md

changelog:
  sort: asc
  filters:
    exclude:
      - '^docs:'
      - '^test:'
